<% if notice.present? %>
<p  data-alert class="alert-box warning radius" id="notice"><%= notice %></p>
<% end %>

<h1>Listing Companies</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Rating</th>
      <th>Name</th>
      <th>Domain</th>
      <th>Policy url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= image_tag company.logo_url %></td>
        <td><%= company.data_rating %></td>
        <td><%= company.name %></td>
        <td><%= link_to company.domain %></td>
        <td><%= link_to company.policy_url %></td>
        <td><%= company.description %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, class: "button radius" %>
